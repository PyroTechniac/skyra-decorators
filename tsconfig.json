{
  "extends": "eslint-config-bamboo",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "removeComments": false
  },
  "typedocOptions": {
    "out": "./docs/",
    "readme": "./README.md",
    "name": "Skyra Decorators",
    "exclude": ["**/node_modules/**", "test/*.test.ts", "test/lib/class-mocks.ts"],
    "mode": "file",
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true
  }
}
